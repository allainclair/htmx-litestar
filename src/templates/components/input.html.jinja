{% macro create(name, label_value, type, id, required) -%}
<div class="mb-4">
	<label for= "{{ name }}" class="block text-sm font-medium text-gray-700">{{ label_value }}</label>
	<input type="{{ type }}" id="{{ id }}" name="{{ name }}" {% if required %} required {% endif %}
		class="mt-1 block w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500">
</div>
{%- endmacro %}
